extra_commands="reload"

depend() {
	need localmount net
	after bootmisc
}

start_pre() {
	if [ ! -d $(dirname ${SYNC_PIDFILE}) ]; then
		mkdir -p $(dirname ${SYNC_PIDFILE})
		chown ${RSLSYNC_USER}:${RSLSYNC_GROUP} $(dirname ${SYNC_PIDFILE})
	fi
}

start() {
	ebegin "Starting ${NAME}"

	start-stop-daemon \
		--start \
		--user "${RSLSYNC_USER}" \
		--group "${RSLSYNC_GROUP}" \
		--pidfile "${SYNC_PIDFILE}" \
		--nice 5 \
		--ionice 3 \
		--exec "${SYNC_BINARY}" \
		-- ${SYNC_OPTS}

	eend $?
}

stop() {
	ebegin "Stopping ${NAME}"

	start-stop-daemon \
		--stop \
		--user "${RSLSYNC_USER}" \
		--group "${RSLSYNC_GROUP}" \
		--exec "${SYNC_BINARY}" \
		--pidfile "${SYNC_PIDFILE}" \
		--wait 5000 \
		--retry SIGTERM/5 

	eend $?
}

reload() {
	ebegin "Reloading ${NAME}"
	start-stop-daemon \
		--signal HUP \
		--exec "${SYNC_BINARY}" \
		--pidfile "${SYNC_PIDFILE}"
	eend $?
}